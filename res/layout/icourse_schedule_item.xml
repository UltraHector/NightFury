<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icourse_schedule_item_bg"
    android:gravity="center_vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="4dp" >

    <TextView
        android:id="@+id/ischedule_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15:00-15:50"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ischedule_course_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ischedule_time_tv"
        android:text="校本部教学大楼412室 课程：系统分析与设计系统分析(07010081)"
        android:textSize="19sp" />

